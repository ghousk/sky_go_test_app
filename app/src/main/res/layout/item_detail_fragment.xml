<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.innovativequest.sky_go_test_app.model.Status" />

        <import type="com.innovativequest.sky_go_test_app.model.Resource" />

        <import type="androidx.lifecycle.LiveData"/>

        <import type="com.innovativequest.sky_go_test_app.model.DataListItem"/>

        <import type="com.bumptech.glide.request.RequestListener"/>

        <import type="android.graphics.drawable.Drawable"/>

        <variable
            name="args"
            type="com.innovativequest.sky_go_test_app.ui.repo.ItemDetailFragmentArgs" />

        <variable
            name="dataListItemResponse"
            type="LiveData&lt;Resource&lt;com.innovativequest.sky_go_test_app.model.DataListItemResponse>>" />

        <variable
            name="contributorsStatus"
            type="Status" />

        <variable
            name="retryCallback"
            type="com.innovativequest.sky_go_test_app.ui.common.RetryCallback" />

        <variable
            name="imageRequestListener"
            type="com.bumptech.glide.request.RequestListener&lt;Drawable>" />
        <variable
            name="listItemIndex"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <FrameLayout
            android:id="@+id/heroImageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_screen_iv_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_detail_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageRequestListener="@{imageRequestListener}"
                app:imageUrl="@{dataListItemResponse.data.items[listItemIndex].poster}"
                app:transitionName="@{args.id}"
                android:layout_gravity="center"
                android:padding="6dp"
                android:background="@android:color/white"
                android:scaleType="fitCenter"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_gravity="center"/>
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/border_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/heroImageLayout"
            android:background="@android:color/darker_gray">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemNameTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:paddingStart="@dimen/text_fields_horizontal_padding"
                android:paddingEnd="@dimen/text_fields_horizontal_padding"
                android:gravity="start|bottom"
                android:textColor="@android:color/black"
                style="@style/AppTheme.TextAppearance.H1Bold"
                android:textAllCaps="false"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{dataListItemResponse.data.items[listItemIndex].title}"
                tools:text="How to Demolish an Entire Civilization and Still Feel Good About Yourself in the Morning" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subItemNameTv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:textColor="@color/app_grey_2"
                android:paddingStart="@dimen/text_fields_horizontal_padding"
                android:paddingEnd="@dimen/text_fields_horizontal_padding"
                android:textAllCaps="false"
                style="@style/AppTheme.TextAppearance.H2Medium"
                android:gravity="start|top"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{@string/user_type_fmt(dataListItemResponse.data.items[listItemIndex].genre)}"
                tools:text="By: Ann Cecilia Diana Emily Fanny Gertrude Hypatia Inez Jane Kate Louisa Maud Nora Orphelia Quince Rebecca Starkey Teresa Ulysis Venus Winifred Xenophen Yetty Zeus Pepper"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:paddingStart="@dimen/detail_screen_body_text_horizontal_padding"
            android:paddingEnd="@dimen/detail_screen_body_text_horizontal_padding"
            app:layout_constraintTop_toBottomOf="@id/border_layout"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@{@string/body_item1_fmt(dataListItemResponse.data.items[listItemIndex].year)}"
                tools:text="Comments: 225632"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:text="@{@string/body_item2_fmt(dataListItemResponse.data.items[listItemIndex].id)}"
                tools:text="mylooooooooooooooooooooooooooooongtextnameeeeeeeeeeeeeee"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:text="@{@string/body_item3_fmt(dataListItemResponse.data.items[listItemIndex].id)}"
                tools:text="mylooooooooooooooooooooooooooooongtextnameeeeeeeeeeeeeee"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="@{@string/body_item4_fmt(dataListItemResponse.data.items[listItemIndex].id)}"
                tools:text="mylooooooooooooooooooooooooooooongtextnameeeeeeeeeeeeeee"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="@{@string/body_item5_fmt(dataListItemResponse.data.items[listItemIndex].id)}"
                tools:text="mylooooooooooooooooooooooooooooongtextnameeeeeeeeeeeeeee"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/body_item_6_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:text="@{@string/body_item6_fmt(dataListItemResponse.data.items[listItemIndex].id)}"
                tools:text="mylooooooooooooooooooooooooooooongtextnameeeeeeeeeeeeeee"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include
            layout="@layout/loading_state"
            app:resource="@{(Resource) dataListItemResponse}"
            app:callback="@{() -> retryCallback.retry()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
